ODBC_PORT=1111

TEMP=$(getopt \
    --options "" \
    --long odbcPort::,bulkLoadDir::,graph:: \
    -n "$0" -- "$@")

eval set -- "$TEMP"
while true ; do
    case "$1" in
        --odbcPort)
            ODBC_PORT=$2; shift 2
            ;;
        --bulkLoadDir)
            BULK_LOAD_DIR=$2; shift 2
            ;;
        --graph)
            GRAPH=$2; shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            echo "Unknown option specified."
            exit 1
            ;;
    esac
done

if [ -z "${BULK_LOAD_DIR}" -o -z "${GRAPH}" ]; then
    echo "Usage: $0 --bulkLoadDir=<bulk load directory> --graph=<graph> [ -odbcPort=ODBC_PORT ]"
    exit 1
fi

isql-v ${ODBC_PORT} exec="ld_dir ('${BULK_LOAD_DIR}', '*', '${GRAPH}');"
isql-v ${ODBC_PORT} exec="rdf_loader_run();"